					<span class="preview"><img alt="Collection" class="ep_doc_icon" src="/images/org_folder.png" /></span>
				</when>
				<otherwise>
					<print expr="fileinfo"/>
				</otherwise>
			</choose>

		</cite:linkhere>
-->
		<div class="result_body">
			<h2><epc:print expr="$item.citation('default')" /></h2>
			<div class="result_text"><p>
				<epc:choose>
					<epc:when test="abstract">
						<epc:print expr="abstract" />
					</epc:when>
					<epc:otherwise>
						No description.
					</epc:otherwise>
				</epc:choose>
			</p></div>
			<div class="ep_column_clear"> </div>
		</div>
	</div>
</div>
</cite:citation>

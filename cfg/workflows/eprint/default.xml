<?xml version="1.0" encoding="utf-8"?>

<workflow xmlns="http://eprints.org/ep3/workflow" xmlns:epc="http://eprints.org/ep3/control">
  <flow>
    <stage ref="core"/>
  </flow>

  <stage name="core">
    <component type="Upload">
      <upload-methods>
        <method>file</method>
        <method>sharelink</method>
      </upload-methods>
    </component>
    <component type="Documents">
      <field ref="description"/>
    </component>

    <component type="Field::Multi">
      <title>Resource Information</title>
      <field ref="title" required="yes" />
      <field ref="abstract"/>
      <field ref="license"/>
      <field ref="creators" input_lookup_url="{$config{rel_cgipath}}/users/lookup/localname" />
    </component>

    <component type="Field::MedShareModuleSelect">
      <field ref="course" />
    </component>

    <component type="Field::Multi">
      <title>Subjects &amp; Themes</title>
      <field ref="themes" />
      <field ref="subjects"/>
    </component>

    <component type="Field::TagLite">
	<field ref="raw_keywords" suggestions_url="{$config{rel_cgipath}}/users/lookup/medshare_keyword_suggestions" />
    </component>

    <component type="Field::Permissions"><field ref="view_permissions" required="yes"/></component>
</stage>

</workflow>
